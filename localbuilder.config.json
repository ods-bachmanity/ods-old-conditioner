{
    "any": {
        "comments": "these settings apply for any build UNLESS there is a prod or dev field.",
        "package": {
            "name": "ods-conditioner",
            "version": "1.0.0",
            "description": "Condition Metadata from image headers and update elastic catalog",
            "main": "index.js",
            "scripts": {
                "start": "nodemon index.js",
                "test": "mocha"
            },
            "author": "Steven Sederburg",
            "license": "ISC",
            "nodemonConfig": {
                "ignore": []
            },
            "dependencies": {
                "config": "^1.30.0",
                "dotenv": "^5.0.1",
                "fs-extra": "^6.0.1",
                "lodash": "^4.17.10",
                "request": "^2.87.0",
                "request-promise": "^4.2.2",
                "restify": "^7.1.1"            
            },
            "devDependencies": {
                "chai": "^4.1.2",
                "chai-as-promised": "^7.1.1",
                "mocha": "^5.2.0"           
            }
        },
        "override-settings": "",
        "override-config": "",
        "assets": [
            "/public/**",
            "/src/definitions/**"
        ],
        "exclude": [    
        ]
    },
    "prod": {
        "comments": "renaming this to 'prod' results in these settings being applied to the build with -prod flag",
        "package": {
            "main": "index.js",
            "scripts": {
                "start": "NODE_ENV=production node index.js"
            },
            "author": "Steven Sederburg",
            "license": "ISC",
            "dependencies": {
                "config": "^1.30.0",
                "dotenv": "^5.0.1",
                "fs-extra": "^6.0.1",
                "request": "^2.87.0",
                "request-promise": "^4.2.2",
                "restify": "^7.1.1"            
            }
        },
        "preserveDevDependencies": false,
        "exclude": [
            "/.gitignore",
            "/swagger.json",
            "/test",
            "/sample-test.js",
            "/.env"
        ]
    },
    "dev": {
        "comments": "renaming this to 'dev' results in these settings being applied to the build with -dev (default) flag",
        "package": {
            "name": "restify-server-dev",
            "main": "index.js",
            "scripts": {
                "start": "nodemon index.js",
                "test": "mocha"
            },
            "author": "Steven Sederburg",
            "license": "ISC",
            "nodemonConfig": {
                "ignore": []
            },
            "dependencies": {
                "config": "^1.30.0",
                "dotenv": "^5.0.1",
                "fs-extra": "^6.0.1",
                "nodemon": "^1.17.3",
                "node-gyp": "^3.7.0",
                "request": "^2.87.0",
                "request-promise": "^4.2.2",
                "restify": "^7.1.1"            
            },
            "devDependencies": {
                "chai": "^4.1.2",
                "chai-as-promised": "^7.1.1",
                "mocha": "^5.2.0",
                "restify-clients": "^2.3.0"      
            }
        }
    }
}
